@model List<Category>
<div class="card shadow border-0 mt-4">
<div class="card-header bg-secondary bg-gradient mt-0 py-3">
    <div class="row">
        <div class="col-12 text-center">
            <h2 class="text-white py-2">Category List</h2>

        </div>

    </div>
</div>
<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">

        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <tr class="bg-red text-white pb-2 border-bottom">
            <th>
                Category name
            </th>
            <th>
                Display Order
            </th>
        </tr>
        <tbody>
            @foreach (var Cat in Model)
            {
                <tr>
                    <td>
                        @Cat.Name
                    </td>
                    <td>
                        @Cat.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@Cat.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@Cat.Id" class="btn btn-danger mx-1">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>    
</div>