@page
@model E_Coms_Razor.Pages.Categories.CategoriesModel
<div class="container">
    <div class="row pt-4 pb-2">
    <div class="col-6">
        <h2 class="text-primary">
            Category list
        </h2>
    </div>
        <div class="col-6 text-end">
            <a asp-page="/Categories/create" class="btn btn-primary">
                Create new category
            </a>
        </div>
    </div>
<table class="table table-bordered table-striped">
    <tr class="bg-red text-dark pb-2 border-bottom">
        <th>
            Category name
        </th>
        <th>
            Display Order
        </th>        
    </tr>
    <tbody>
        @foreach(var Cat in Model.CategoryList)
        {
            <tr>
                <td>
                    @Cat.Name
                </td>
                <td>
                    @Cat.DisplayOrder
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit" asp-route-id="@Cat.Id" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i>Edit
                        </a>
                            <a asp-page="/Categories/delete" asp-route-id="@Cat.Id" class="btn btn-danger mx-1">
                                <i class="bi bi-trash-fill"></i>Delete
                        </a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>   
</table>
</div>
